{
    "title": "${connections.title}",
    "required": [
        "name",
        "providerType"
    ],
    "type": "object",
    "properties": {
        "name": {
            "title": "${common.displayName}",
            "type": "string"
        },
        "description": {
            "title": "${common.description}",
            "type": "string"
        },
        "providerType": {
            "title": "${common.provider}",
            "type": "string",
            "enum": [
                "bingImageSearch",
                "localFileSystemProxy"
            ],
            "default": "bingImageSearch",
            "enumNames": [
                "${connections.providers.bing.title}",
                "${connections.providers.local.title}"
            ]
        },
        "providerOptions": {
            "type": "object"
        }
    }
}